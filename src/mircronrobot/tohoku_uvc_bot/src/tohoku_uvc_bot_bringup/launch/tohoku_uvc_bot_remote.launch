<launch>
    <arg name="model" default="$(env TOHOKU_UVC_MODEL)" doc="model type [turtlebot3, RobeUVC]"/>
    <arg name="multi_robot_name" default=""/>

    <include file="$(find tohoku_uvc_bot_bringup)/launch/includes/description.launch.xml">
        <arg name="model" value="$(arg model)" />
    </include>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" vlaue="50.0"/>
        <param name="tf_prefix" value="$(arg multi_robot_name)" />
    </node>
</launch>